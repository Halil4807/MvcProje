@using MvcProje.Models.Entity
@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div>
    <table class="table table-bordered">
        <tr>
            <th>Kategori ID</th>
            <th>Kategori AD</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        <tbody>
            @foreach (var kategori in Model)
            {
            <tr>
                <td>@kategori.KATEGORIID</td>
                <td>@kategori.KATEGORIAD</td>
                @*<td><a href="/Kategori/Sil/@kategori.KATEGORIID" class="btn btn-danger">Sil</a></td>*@
                <td>@Html.ActionLink("Kategori Sil", "Sil", new { id = kategori.KATEGORIID }, new { @class = "btn btn-danger", onclick = "return confirm('Emin misin?')" })</td>
                <td><a href="/Kategori/KategoriGuncelle/@kategori.KATEGORIID" class="btn btn-primary">Güncelle</a></td>

            </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new {sayfa}))
    <a href="/Kategori/YeniKategori/" class="btn btn-success">Yeni Kategori Ekle</a>
</div>