@using MvcProje.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div">
    <table id="urunlertablo" class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün ID</th>
                <th>Ürün AD</th>
                <th>Ürün Marka</th>
                <th>Ürün Kategori</th>
                <th>Ürün Fiyat</th>
                <th>Ürün Stok</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urunler in Model)
            {

                <tr>
                    <td>@urunler.URUNID</td>
                    <td>@urunler.URUNAD</td>
                    <td>@urunler.MARKA</td>
                    <td>@urunler.TBLKATEGORILER.KATEGORIAD</td>
                    <td>@urunler.FIYAT</td>
                    <td>@urunler.STOK</td>
                    @*<td><a href="/Urunler/Sil/@urunler.URUNID" class="btn btn-danger">Sil</a></td>*@
                    <td>@Html.ActionLink("Ürün Sil", "Sil", new { id = urunler.URUNID }, new { @class = "btn btn-danger", onclick = "return confirm('Emin misin?')" })</td>
                    <td><a href="/Urunler/UrunGuncelle/@urunler.URUNID" class="btn btn-primary">Güncelle</a></td>

                </tr>

            }
        </tbody>
    </table>

    <a href="/Urunler/YeniUrun/" class="btn btn-success">Yeni Ürün Ekle</a>
    </div>

    <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js">
    </script>
    <link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script>
        $('#urunlertablo').DataTable();
    </script>
