@model MvcProje.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div>
    <form class="form-group" method="post">
        <div>
            <label>Ürün Ad:</label>
            <input type="text" class="form-control" name="UrunAd" required="required" />
        </div>
        <div>
            <label>Marka:</label>
            <input type="text" class="form-control" name="Marka" required="required" />
        </div>
        <div>
            <label>Kategori:</label>
            @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.ktg, new { @class = "form-control" })
        </div>
        <div>
            <label>Fiyat:</label>
            <input type="text" class="form-control" name="Fiyat" required="required" />
        </div>
        <div>
            <label>Stok:</label>
            <input type="text" class="form-control" name="Stok" required="required" />
        </div>
        <div style="margin-top:15px">
            <button>Ürün Ekle</button>
        </div>
    </form>
</div>
